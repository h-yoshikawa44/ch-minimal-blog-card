{
  "name": "ch-minimal-blog-card",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint-check": "npm run lint:stylelint && npm run check:prettier",
    "lint:stylelint": "stylelint \"./css/**/*.css\"",
