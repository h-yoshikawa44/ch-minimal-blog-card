    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "fix:prettier": "npm run check:prettier -- --write"
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "stylelint": "^15.11.0",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.4",
    "vite": "^5.0.0"
  }
}
